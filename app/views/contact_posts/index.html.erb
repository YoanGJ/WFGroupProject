<p id="notice"><%= notice %></p>

<h1 style="margin-top:100px;">Contact Posts</h1>
<section>
<div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Message</th>
          <th>Show</th>
          <th>Destroy</th>
        </tr>
      </thead>
    </table>
  </div>


 <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @contact_posts.each do |contact_post| %>
          <tr>
            <td><%= contact_post.name %></td>
            <td><%= contact_post.phone %></td>
            <td><%= contact_post.email %></td>
            <td><%= contact_post.message %></td>
            <td><%= link_to 'Show', contact_post %></td>
            <td><%= link_to 'Destroy', destroy_it_contact_post_path(id: contact_post.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>

<%= link_to 'New Contact Post', new_contact_post_path %>
</section>