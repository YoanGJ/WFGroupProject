<% provide(:title, "Log in") %>
<h1 style="margin-top: 100px;">Log in</h1>

<div class="row">
            <h2 style="margin-left:20%;">Email</h2>
            <h2 style="margin-left:20%; float:left;">Password</h2>
    <div class="col-md-6 col-md-offset-3" style="margin-top:-8%;">
            <%= form_for(:session, url: login_path) do |f| %>
        
            <%= f.email_field :email, class: 'form-control', style:"border-color: #222222; background-color: #222222;" %>
        
            <%= f.password_field :password, class: 'form-control', style:"border-color: #222222; background-color: #222222;" %>
        
            <%= f.submit "Log in", class: "btn btn-primary", style:"border-color: #222222; background-color: #222222;" %>
        <% end %>
    </div>
</div>
