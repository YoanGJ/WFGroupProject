<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "Griffitness", root_path, id: "logo" %>
        <nav>
          <ul class ="nav navbar-nav navbar-right">

            <% if admin_logged_in? %>
              <li><%= link_to "Pages", pages_path %></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            <% else %>
              <li><%= link_to "Admin", login_path %></li>
              <li><%= link_to "Other",  "#" %></li>
              <% if Page.all.size > 4%>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Other <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <% Page.all.each do |page| %>
                      <% if page.id > 4%>
                        <li><%= link_to page.title, page %></li>
                      <% end %>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            <% end %>
              
          </ul>
        </nav>
    </div>
</header>

