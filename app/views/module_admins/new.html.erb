<%= provide(:title, 'New module admin') %>
<h1>New Module Admin</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@module_admin, url: signup_module_admin_path) do |f| %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :surname %>
        <%= f.text_field :surname, class: 'form-control' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        
        <%= f.submit "Create a module admin", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

<%= render 'form', module_admin: @module_admin %>

<%= link_to 'Back', module_admins_path %>
