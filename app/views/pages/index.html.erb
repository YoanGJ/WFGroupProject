<p id="notice"><%= notice %></p>

<h1 style="margin-top: 100px;">Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Show</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= link_to 'Show', page, :class => 'link-to-text-color' %></td>
        <td><%= link_to 'Edit', edit_page_path(page), :class => 'link-to-text-color' %></td>
        <% if page.id > 4 %>
          <td><%= link_to 'Destroy', destroy_it_page_path(id: page.id), :class => 'link-to-text-color' %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, :class => 'link-to-text-color' %>
